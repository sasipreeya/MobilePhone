<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.DetailActivity"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="300dp">

        <com.ouattararomuald.slider.ImageSlider
                android:id="@+id/phoneImage"
                android:src="@mipmap/ic_launcher"
                android:layout_centerInParent="true"
                android:layout_margin="8dp"
                android:layout_width="200dp"
                android:layout_height="300dp"/>

        <TextView
                android:id="@+id/phoneRating"
                android:text="Rating 4.9"
                android:textSize="16dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/phonePrice"
                android:text="Price 123"
                android:textSize="16dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/phoneName"
                android:text="Phone Name"
                android:textSize="24dp"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/phoneBrand"
                android:text="Phone Brand"
                android:textSize="16dp"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </LinearLayout>

    <TextView
            android:id="@+id/phoneDetail"
            android:text="Phone Detail"
            android:textSize="16dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>