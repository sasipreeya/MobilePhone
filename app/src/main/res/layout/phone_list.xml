<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/phoneImage"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/phoneName"
                android:text="Phone 1"
                android:textSize="20dp"
                android:layout_margin="8dp"
                android:layout_toRightOf="@id/phoneImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:id="@+id/favoriteBtn"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:background="@drawable/favorite_button"
                android:layout_margin="8dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/phoneDetail"
                android:lines="2"
                android:text="sample phone detail"
                android:layout_margin="8dp"
                android:layout_toRightOf="@id/phoneImage"
                android:layout_below="@id/phoneName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/phonePrice"
                android:text="Price : $123.123"
                android:layout_margin="8dp"
                android:layout_toRightOf="@id/phoneImage"
                android:layout_below="@id/phoneDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/phoneRating"
                android:text="Rating : 4.9"
                android:layout_margin="8dp"
                android:paddingLeft="80dp"
                android:layout_below="@id/phoneDetail"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>