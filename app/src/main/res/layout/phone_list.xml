<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/phoneImage"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/phone_image"
                    android:layout_margin="8dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            <TextView
                    android:id="@+id/phoneName"
                    android:textSize="20sp"
                    android:layout_margin="8dp"
                    android:layout_toEndOf="@id/phoneImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ToggleButton
                    android:id="@+id/favoriteBtn"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:background="@drawable/favorite_button"
                    android:layout_margin="8dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

            <TextView
                    android:id="@+id/phoneDetail"
                    android:lines="2"
                    android:layout_margin="8dp"
                    android:layout_toEndOf="@id/phoneImage"
                    android:layout_below="@id/phoneName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/phonePrice"
                    android:layout_margin="8dp"
                    android:layout_toEndOf="@id/phoneImage"
                    android:layout_below="@id/phoneDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/phoneRating"
                    android:layout_margin="8dp"
                    android:paddingStart="80dp"
                    android:paddingEnd="8dp"
                    android:layout_below="@id/phoneDetail"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>