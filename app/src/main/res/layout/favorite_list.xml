<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/phoneImageFav"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/phoneNameFav"
                android:text="Phone 1"
                android:textSize="20dp"
                android:layout_margin="8dp"
                android:layout_toRightOf="@id/phoneImageFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/phonePriceFav"
                android:text="Price : $123.123"
                android:layout_margin="8dp"
                android:layout_toRightOf="@id/phoneImageFav"
                android:layout_below="@id/phoneNameFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/phoneRatingFav"
                android:text="Rating : 4.9"
                android:layout_margin="8dp"
                android:paddingTop="30dp"
                android:layout_toRightOf="@id/phoneImageFav"
                android:layout_below="@id/phonePriceFav"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>